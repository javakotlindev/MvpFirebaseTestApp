<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_size_24dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/linear_bc"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="225dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_size_24dp"
        android:text="@string/no_internet_connection"
        android:textSize="@dimen/text_size_16sp" />


    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/ic_no_connection_icon"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_size_24dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_marginBottom="@dimen/margin_size_24dp"
        android:layout_marginTop="@dimen/margin_size_48dp"
        android:id="@+id/checkConnection"
        android:text="@string/check_connection"
        android:layout_weight="1"
        android:layout_marginStart="@dimen/margin_size_24dp"
        android:layout_marginEnd="@dimen/margin_size_24dp"
        android:layout_width="match_parent"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_16sp"
        android:background="@drawable/button_bg_blue"
        android:layout_height="wrap_content"/>


</androidx.appcompat.widget.LinearLayoutCompat>